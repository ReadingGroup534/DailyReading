            <include layout="@layout/leftmenu" />
            
            <!-- 内容层 -->
  		   <include layout="@layout/main_content"/>
            
        </LinearLayout>

    </com.aiteu.dailyreading.view.SlidingMenuView> 

</RelativeLayout>