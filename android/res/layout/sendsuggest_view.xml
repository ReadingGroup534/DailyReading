<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/suggest_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/dockbar" >

         <Button
	        android:id="@+id/send_return_btn"
	        style="@style/Text.Title_Button"
	        android:layout_width="wrap_content"
	        android:layout_height="35dip"
	        android:layout_marginTop="5dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/title_btn_back"
	        android:minWidth="60dip" 
	        android:text="@string/back"/>
	
	    <TextView
	        android:id="@+id/title_text"
	        style="@style/Text.Title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1" 
	        android:layout_centerInParent="true"
	        android:text="@string/send_suggest"/>
    </RelativeLayout>

   

    <TextView
        android:id="@+id/tv_suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suggest_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="发送您的建议给我们，我们将会做的更好！" />

    <EditText
        android:id="@+id/suggest_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_suggest"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:minLines="4" />

    <Button
        android:id="@+id/sendsuggest"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/suggest_et"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp"
        android:text="发送" />

</RelativeLayout>